{
	"name": "trizlink",
	"version": "1.0.0",
	"main": "main.js",
	"description": "Trizlink",
	"productName": "Trizlink",
	"publisher": "https://trizlink.com",
	"author": {
		"email": "ahsan@zaions.com",
		"name": "Ahsan Mahmood",
		"url": "https://zaions.com"
	},
	"private": true,
	"homepage": ".",
	"build": {
		"productName": "Trizlink",
		"appId": "com.trizlink.desktop",
		"linux": {
			"category": "Utility",
			"icon": "icon.png",
			"target": [
				"deb",
				"appImage"
			]
		},
		"deb": {
			"depends": [
				"gconf2",
				"gconf-service",
				"libnotify4",
				"libappindicator1",
				"libxtst6",
				"libnss3"
			]
		},
		"win": {
			"icon": "icon.png",
			"certificateFile": "PATH TO CERTIFICATE FILE",
			"certificatePassword": "CERTIFICATE PASSWORD"
		},
		"mac": {
			"icon": "icon.icns",
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"gatekeeperAssess": false,
			"target": {
				"target": "default",
				"arch": "universal"
			}
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"license": "license.md",
			"runAfterFinish": true
		},
		"files": [
			"node_modules/**/*",
			"public/**/*",
			"index.html",
			"main.js",
			"preload.js",
			"package.json",
			"icon.icns",
			"icon.ico",
			"icon.png"
		],
		"extraMetadata": {
			"main": "main.js"
		},
		"directories": {
			"buildResources": "build"
		}
	},
	"scripts": {
		"start": "electron .",
		"electron:win": "electron-builder -w -c.extraMetadata.main=main.js",
		"electron:mac": "electron-builder -m -c.extraMetadata.main=main.js",
		"electron:linux": "electron-builder -l -c.extraMetadata.main=main.js"
	},
	"devDependencies": {
		"electron": "^29.3.0",
		"electron-builder": "^24.13.3"
	},
	"dependencies": {
		"@jitsi/electron-sdk": "^6.0.33",
		"electron-context-menu": "^3.6.1",
		"electron-is-dev": "^3.0.1",
		"electron-window-state": "^5.0.3",
		"remote": "^0.2.6"
	}
}
